  pod 'Alamofire'
  pod 'Nuke'
  pod 'ObjectMapper'
  pod 'SwiftEventBus', :tag => '5.1.0', :git => 'https://github.com/cesarferreira/SwiftEventBus.git'
  
  pod 'FirebaseMessaging'
  pod 'FirebaseCrashlytics'
  pod 'FirebaseAnalytics'
  
end

